{
    "compilerOptions": {
        "strict": true,
        "target": "es2020",
        "module": "es2020",
        "declaration": true,
        "importHelpers": true,
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
